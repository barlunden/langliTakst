---
const { items, category, bakgrunn } = Astro.props; // Accept data as props
---
<div class="price-list" style={`background:${bakgrunn}`}>
  <h2>{category}</h2>
  <ul>
    {items.map((item: { name: unknown; price: unknown; }) => (
      <li>
        <span>{item.name}</span>
        <span>{item.price}</span>
      </li>
    ))}
  </ul>
</div>