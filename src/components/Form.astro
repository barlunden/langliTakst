---
import PageHeader from "./PageHeader.astro"
---


<section class="contact-section shadow-box" id="kontakt-skjema">
  <form class="flex flex-col text-lg" method="POST" action="/api/contact">
    <PageHeader pageTitle="Ta kontakt i dag!" />
    <label for="name">Navn:</label>
    <input class="form-input" type="text" id="name" name="name" required />

    <label for="email">E-post:</label>
    <input class="form-input" type="email" id="email" name="email" required />

    <label for="service">Emne:</label>
    <input
      class="form-input"
      type="text"
      id="subject"
      name="subject"
      required
    />

    <label for="message">Melding:</label>
    <textarea class="form-input" id="message" name="message" required
    ></textarea>

    <button class="button" type="submit">Send skjema</button>
  </form>
</section>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
</style>