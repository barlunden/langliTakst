---
// Props: title, description, icon, image
// Blir brukt i Tjenester.astro

import husBilde from "../images/hus.jpg";

const bildeKart = {
  verditakst: husBilde,
};

const { tittel, slug, avsnitt1, avsnitt2, ikon, bilde, bakgrunn, kategori } =
  Astro.props;
type BildeStikkord = keyof typeof bildeKart; // "verditakst" | "annaStikkord"

const valgtBilde = bildeKart[kategori as BildeStikkord];
---

<div class="fp-container">
  <section class="fp-service-card shadow-box" style={`background:${bakgrunn}`}>
    <div class="fp-service-front">
      {ikon && <img src={`/icons/${ikon}.svg`} alt="" class="ikon" />}
      <h3 class="fp-service-tittel">{tittel}</h3>
      <p>{avsnitt1}</p>
    </div>
    <div class="fp-service-back">
      <p>{avsnitt2}</p>
      <a href={`/tjenester/${slug}`} class="button">Les mer om tjenesten</a>
    </div>
  </section>
</div>

<style>
  .fp-container {
    perspective: 1000px;
  }

  .fp-service-card {
    position: relative;
    border-radius: var(--card-radius);
    width: 100%;         /* Fills the grid cell */
    height: 250px;
    transition: transform 1s;
    transform-style: preserve-3d;
    margin: 0;           /* Remove auto-centering */
    padding-top: 2rem;
    padding-bottom: 2rem;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    cursor: default;
    box-sizing: border-box;
  }

  .fp-service-card:hover {
    transform: rotateY(180deg);
  }
  .fp-service-front {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
  .fp-service-front .ikon {
    width: 2rem;
  }

  .fp-service-tittel {
    font-size: 1.125rem;
    font-weight: 600;
    padding-bottom: 0.5rem;
    margin: 0;
    text-align: center;
  }

  .fp-service-front,
  .fp-service-back {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    backface-visibility: hidden;
    border-radius: var(--card-radius);
    overflow: hidden;
    padding: 20px;
    box-sizing: border-box;
  }

  .fp-service-front {
    color: black;
    z-index: 2;
  }

  .fp-service-back {
    color: black;
    transform: rotateY(180deg);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .fp-service-back p {
    margin-top: auto;
  }
</style>