---
import ansatt1 from "../assets/ansatt1.jpg";
import ansatt2 from "../assets/ansatt2.jpg";
import ansatt3 from "../assets/ansatt3.jpg";

const ansatte = [
  {
    bilde: ansatt1.src,
    alt: "Portrett av Thomas Langli",
  },
  {
    bilde: ansatt2.src,
    alt: "Portrett av Mathias Langli",
  },
  {
    bilde: ansatt3.src,
    alt: "Portrett av kontormedarbeider",
  },
];
const bakgrunn = "hsl(48, 100%, 90%)";
---

<section class="card shadow-box karusell-kort" style={`background:${bakgrunn}`}>
  <div id="ansatt-karusell" data-ansatte={JSON.stringify(ansatte)}>
    <h4 class="card-header">Trenger du råd om bolig eller takst?</h4>
    <p class="eksperthjelp">
      Våre eksperter står klare til å hjelpe deg – ta kontakt i dag for en hyggelig prat!
    </p>
    <div class="ansatt-visning">
      <img
        id="ansatt-bilde"
        src={ansatte[0].bilde}
        alt={ansatte[0].alt}
        class="ansatt-bilde"
      />
    </div>
    <!-- Karusell-knappar fjerna -->
  </div>
</section>

<script is:inline>
  // Hent ansatte-data frå data-attributtet
  const ansatte = JSON.parse(document.getElementById("ansatt-karusell").dataset.ansatte);
  let i = 0;
  const bilde = document.getElementById("ansatt-bilde");
  setInterval(() => {
    i = (i + 1) % ansatte.length;
    bilde.src = ansatte[i].bilde;
    bilde.alt = ansatte[i].alt;
  }, 3000);
</script>

<style>
  .karusell-kort {
    width: 100%;
    max-width: none;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: stretch;
  }
  .ansatt-visning {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    width: 100%;
  }
  .ansatt-bilde {
    width: 200px;
    height: 200px;
    object-fit: cover;
    border-radius: calc(var(--card-radius) / 2);
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }
  .eksperthjelp {
    padding: 0.5rem 0;
  }
  .card-header {
    padding-top: 0.5rem;
  }
</style>
