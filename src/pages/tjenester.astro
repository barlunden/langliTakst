---
import PageHeader from '../components/PageHeader.astro';
import Layout from '../layouts/Layout.astro';

export const currentPath = "/tjenester";

const tjenestekategorier = [
  {
    tittel: "Kjøp og salg av bolig",
    beskrivelse: "Profesjonell bistand ved kjøp og salg av bolig. Vi hjelper deg med tilstandsrapporter, gjennomgang av dokumenter og gir deg trygghet i prosessen.",
    ikon: "home-modern",
    slug: "kjopogsalg",
    farge: "hsl(120, 30%, 96%)"
  },
  {
    tittel: "Taksering og verdivurdering",
    beskrivelse: "Vi utfører verditakst, tomtetakst, næringstakst og andre typer takseringer for privatpersoner, bedrifter og finansinstitusjoner.",
    ikon: "banknotes",
    slug: "takst",
    farge: "hsl(54, 100%, 96%)"
  },
  {
    tittel: "Byggeprosjekt og kontroll",
    beskrivelse: "Uavhengig kontroll og byggelånsoppfølging for å sikre kvalitet og fremdrift i byggeprosjekter.",
    ikon: "tape-measure",
    slug: "byggkontroll",
    farge: "hsl(170, 30%, 96%)"
  },
  {
    tittel: "Energi og rådgivning",
    beskrivelse: "Energirådgivning og bistand med Enovatilskudd. Vi hjelper deg med å spare energi og penger.",
    ikon: "solar-energy",
    slug: "energi",
    farge: "hsl(100, 40%, 96%)"
  }
];
---
<Layout currentPath={currentPath}>
  <div class="tjenester-wrapper">
    <PageHeader pageTitle="Våre tjenester" />
    
    <div class="intro-text">
      <p>
        Langli Takst AS tilbyr et bredt spekter av tjenester innen taksering, 
        byggeprosjekt og energirådgivning. Våre erfarne takstmenn hjelper deg 
        trygt gjennom hele prosessen.
      </p>
    </div>

    <div class="tjeneste-grid">
      {tjenestekategorier.map((kategori) => (
        <a href={`/tjenester/${kategori.slug}`} class="tjeneste-kort shadow-box" style={`background: ${kategori.farge}`}>
          <div class="kort-innhold">
            <img src={`/icons/${kategori.ikon}.svg`} alt="" class="tjeneste-ikon" />
            <h2 class="tjeneste-tittel">{kategori.tittel}</h2>
            <p class="tjeneste-beskrivelse">{kategori.beskrivelse}</p>
            <span class="les-mer-link">Les mer →</span>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>

<style>
  .tjenester-wrapper {
    max-width: 1000px;
    margin: 0 auto;
    padding: 3rem clamp(1rem, 5vw, 3rem);
  }
  .intro-text {
    max-width: 800px;
    margin: 0 auto 3rem;
    text-align: center;
    font-size: 1.1rem;
    line-height: 1.8;
    color: hsl(206, 42%, 36%);
  }

  .tjeneste-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .tjeneste-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .tjeneste-kort {
    text-decoration: none;
    color: inherit;
    border-radius: var(--card-radius);
    padding: 2.5rem 2rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    min-height: 280px;
  }

  .tjeneste-kort:hover {
    transform: translateY(-4px);
  }

  .kort-innhold {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    height: 100%;
  }

  .tjeneste-ikon {
    width: 60px;
    height: 60px;
    margin-bottom: 1.5rem;
  }

  .tjeneste-tittel {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: hsl(206, 42%, 26%);
  }

  .tjeneste-beskrivelse {
    font-size: 1rem;
    line-height: 1.6;
    color: hsl(206, 42%, 36%);
    margin: 0 0 auto 0;
    flex-grow: 1;
  }

  .les-mer-link {
    display: inline-block;
    margin-top: 1.5rem;
    color: hsl(206, 42%, 36%);
    font-weight: 600;
    font-size: 1rem;
    transition: color 0.3s ease;
  }

  .tjeneste-kort:hover .les-mer-link {
    color: hsl(206, 42%, 26%);
  }

  @media (max-width: 600px) {
    .tjeneste-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .tjeneste-kort {
      padding: 2rem 1.5rem;
      min-height: 240px;
    }

    .tjeneste-ikon {
      width: 50px;
      height: 50px;
    }

    .tjeneste-tittel {
      font-size: 1.25rem;
    }
  }
</style>
