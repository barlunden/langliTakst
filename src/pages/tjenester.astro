---
import PageHeader from '../components/PageHeader.astro';
import Layout from '../layouts/Layout.astro';
import Tjeneste from '../components/Tjeneste.astro';
import tjenester from '../data/tjenesteOversikt';

const kategori = "ingress";
const filtrerteTjenester = tjenester.filter(tjeneste =>
tjeneste.kategori.includes(kategori)
);

export const currentPath = "/tjenester/takst";
---
<Layout currentPath={currentPath}>
	<PageHeader pageTitle="Tjenester" />

<section class="grid md:grid-cols-2">
  {filtrerteTjenester.map(tjeneste => (
    <Tjeneste {...tjeneste} />
  ))}
</section>
</Layout>