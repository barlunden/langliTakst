---
import PageHeader from '../../components/PageHeader.astro';
import Layout from '../../layouts/Layout.astro';
import Tjeneste from '../../components/Tjeneste.astro';
import tjenester from '../../data/tjenester.js';
import TjenesteIngress from '../../components/TjenesteIngress.astro';

const kategori = "taksering";
const filtrerteTjenester = tjenester.filter(tjeneste =>
tjeneste.kategori.includes(kategori)
);

export const currentPath = "/tjenester/takst";
---
<Layout currentPath={currentPath}>
  <TjenesteIngress />
	<PageHeader pageTitle="Taksering og verdivurdering" />

<section class="grid md:grid-cols-2 py-6 gap-y-2 md:gap-x-16 mx-6 md:mx-16">
  {filtrerteTjenester.map(tjeneste => (
    <Tjeneste {...tjeneste} />
  ))}
</section>
</Layout>