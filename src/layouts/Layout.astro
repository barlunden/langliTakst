---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/open-sans";
import "../styles/global.css";

const { currentPath } = Astro.props;
---

<!doctype html>
<html lang="no">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="author" content="Aage Jan Barlund" />
    <meta
      name="description"
      content="Langli Takst AS tilbyr taksttjenester, tilstandsrapport og rådgivning ved boligkjøp og reklamasjon. Våre erfarne takstmenn hjelper deg trygt gjennom hele prosessen. Ta kontakt for en uforpliktende prat!"
    />
    <meta
      property="og:title"
      content="Langli Takst AS - Taksttjenester og rådgivning"
    />
    <meta
      property="og:description"
      content="Våre erfarne takstmenn hjelper deg med takst, tilstandsrapport og rådgivning. Kontakt oss for en hyggelig prat om dine behov."
    />
    <meta property="og:image" content="/images/langlitakst.png" />
    <!-- Bytt til faktisk bilde -->
    <meta property="og:url" content="https://langlitakst.no/" />
    <!-- Bytt til faktisk URL -->
    <meta property="og:type" content="website" />

    <!-- Twitter Card (valgfritt, men anbefalt) -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Langli Takst AS – Taksttjenester og rådgivning"
    />
    <meta
      name="twitter:description"
      content="Få hjelp av våre hyggelige og erfarne takstmenn. Kontakt oss for en uforpliktende prat om taksttjenester og rådgivning."
    />
    <meta name="twitter:image" content="/images/langlitakst.png" />

    <!-- Canonical URL (for SEO) -->
    <link rel="canonical" href="https://langlitakst.no/" />
    <meta name="generator" content={Astro.generator} />
    <title>Langli Takst AS - Taksttjenester og rådgivning</title>
  </head>
  <body>
    <style>
      .page-wrapper {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      
      .main-content {
        flex: 1;
      }
    </style>
    <div class="page-wrapper">
      <NavBar currentPath={currentPath} />
      <main class="main-content">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
