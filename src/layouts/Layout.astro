---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/open-sans"
import "../styles/global.css";

const { currentPath } = Astro.props;
---
<!-- Hugs å endre innhald på meta-tag properties -->
<!doctype html>
<html lang="no">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="author" content="Your name" />
    <meta name="description" content="Brief description" />
    <meta property="og:title" content="Langli Takst AS" />
    <meta property="og:description" content="Nettside for Langli Takst AS, tjenester og priser" />
    <meta property="og:image" content="/some-image.png" />
    <meta property="og:url" content="/this-page.html" />
    <meta property="og:site_name" content="Your Site Name" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image:alt" content="image description" />
    <link rel="icon" type="image/svg+xml" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Langli Takst AS</title>
  </head>
  <body>
    <NavBar currentPath={currentPath} />
    <slot />
    <Footer />
  </body>
</html>